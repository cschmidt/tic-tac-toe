#!/bin/bash
aws --profile personal \
  sns create-topic \
  --region "us-west-2" \
  --name "tic-tac-toe-moves"

# FIXME - look at FIFO queues and consider lowering the MessageRetentionPeriod
aws --profile personal \
  sqs create-queue \
  --region "us-west-2" \
  --queue-name "tic-tac-toe-moves"

# FIXME don't hard-code the ARNs
aws --profile personal \
  sns subscribe \
  --topic-arn "arn:aws:sns:us-west-2:745313119890:tic-tac-toe-moves" \
  --protocol sqs \
  --notification-endpoint "arn:aws:sqs:us-west-2:745313119890:tic-tac-toe-moves"
